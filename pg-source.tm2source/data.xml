<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE Map[]>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0.0 +k=1.0 +units=m +nadgrids=@null +wktext +no_defs +over">

<Parameters>
  <Parameter name="center">-73.6084,-51.0966,5</Parameter>
  <Parameter name="format">pbf</Parameter>
  <Parameter name="json"><![CDATA[{"vector_layers":[{"id":"coverage","description":"","fields":{}},{"id":"population","description":"Population density","fields":{"density":"Number"}}]}]]></Parameter>
  <Parameter name="maxzoom">11</Parameter>
  <Parameter name="minzoom">1</Parameter>
  <Parameter name="name"><![CDATA[worldpop]]></Parameter>
</Parameters>


<Layer name="coverage"
  buffer-size="8"
  srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    
    <Datasource>
       <Parameter name="dbname"><![CDATA[worldpop]]></Parameter>
       <Parameter name="extent"><![CDATA[-180,-85.0511,180,85.0511]]></Parameter>
       <Parameter name="geometry_field"><![CDATA[]]></Parameter>
       <Parameter name="geometry_table"><![CDATA[]]></Parameter>
       <Parameter name="host"><![CDATA[localhost]]></Parameter>
       <Parameter name="key_field"><![CDATA[]]></Parameter>
       <Parameter name="max_size"><![CDATA[512]]></Parameter>
       <Parameter name="password"><![CDATA[]]></Parameter>
       <Parameter name="port"><![CDATA[5432]]></Parameter>
       <Parameter name="table"><![CDATA[( SELECT wkb_geometry FROM coverage
  WHERE z(!scale_denominator!) in (6,7,8,9,10)
  AND wkb_geometry && !bbox!
  UNION ALL
  SELECT wkb_geometry FROM coverage_005
  WHERE z(!scale_denominator!) in (1,2,3,4,5)
  AND wkb_geometry && !bbox!
) AS data]]></Parameter>
       <Parameter name="type"><![CDATA[postgis]]></Parameter>
       <Parameter name="user"><![CDATA[anand]]></Parameter>
    </Datasource>
  </Layer>

<Layer name="population"
  buffer-size="0"
  srs="+proj=longlat +ellps=WGS84 +datum=WGS84 +no_defs">
    
    <Datasource>
       <Parameter name="dbname"><![CDATA[worldpop]]></Parameter>
       <Parameter name="extent"><![CDATA[-180,-85.0511,180,85.0511]]></Parameter>
       <Parameter name="geometry_field"><![CDATA[]]></Parameter>
       <Parameter name="geometry_table"><![CDATA[]]></Parameter>
       <Parameter name="host"><![CDATA[localhost]]></Parameter>
       <Parameter name="key_field"><![CDATA[]]></Parameter>
       <Parameter name="max_size"><![CDATA[512]]></Parameter>
       <Parameter name="password"><![CDATA[]]></Parameter>
       <Parameter name="port"><![CDATA[5432]]></Parameter>
       <Parameter name="table"><![CDATA[( SELECT wkb_geometry, density FROM population
  WHERE z(!scale_denominator!) = 11
  AND wkb_geometry && !bbox!
 UNION ALL
  SELECT wkb_geometry, density FROM population_005
  WHERE z(!scale_denominator!) in (5,6,7,8,9,10)
  AND wkb_geometry && !bbox!
) AS data]]></Parameter>
       <Parameter name="type"><![CDATA[postgis]]></Parameter>
       <Parameter name="user"><![CDATA[anand]]></Parameter>
    </Datasource>
  </Layer>

</Map>